{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: ganglia.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ganglia.py",
            "console": "integratedTerminal",
            "args": [
                "--listen-dur-secs", "150",
                "--tts-interface", "coqui",
                "--dictation-type", "live_google",
                "--device-index", "3",
                "--enable-turn-indicators"
            ],
            "justMyCode": true
        }
    ]
}
